{% extends 'base.html.twig' %}

{% block title %}Pointage{% endblock %}

{% block body %}
<div class = "container text-center">
    <h1>Pointage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Jour</th>
                <td>{{ pointage.jour ? pointage.jour|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ pointage.poste }}</td>
            </tr>
            <tr>
                <th>Arrive</th>
                <td>{{ pointage.arrive ? pointage.arrive|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Arrive pointage</th>
                <td>{{ pointage.arrivepointage ? pointage.arrivepointage|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ pointage.depart ? pointage.depart|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Depart pointage</th>
                <td>{{ pointage.departpointage ? pointage.departpointage|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ pointage.heure ? pointage.heure.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>Heure sup</th>
                <td>{{ pointage.heuresup ? pointage.heuresup.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pointage_index') }}">back to list</a>

    <a href="{{ path('app_pointage_edit', {'id': pointage.id}) }}">edit</a>

    {{ include('pointage/_delete_form.html.twig') }}
</div>
{% endblock %}
